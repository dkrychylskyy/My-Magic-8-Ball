<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1abc9c"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.dimitrykrychylskyy.my_magic_8_ball_android.MainActivity">

    <TextView
        android:id="@+id/text_make_decisions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:text="@string/make_decisions"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/image_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ball1" />

    <Button
        android:id="@+id/button_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@android:color/holo_blue_dark"
        android:paddingLeft="100sp"
        android:paddingRight="100sp"
        android:text="Button"
        android:textColor="@android:color/background_light"
        tools:text="@string/text_ask" />

</RelativeLayout>
